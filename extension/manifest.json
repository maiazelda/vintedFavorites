{
  "manifest_version": 3,
  "name": "Vinted Favorites Sync",
  "version": "1.0.0",
  "description": "Synchronise tes favoris Vinted vers ton app personnelle",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "permissions": [
    "cookies",
    "storage"
  ],

  "host_permissions": [
    "https://www.vinted.fr/*",
    "https://www.vinted.be/*",
    "https://www.vinted.es/*"
  ],

  "background": {
    "service_worker": "background.js"
  }
}
